	#question{
		text-align:center;
    font-size:125pt;
    height:50vh;
    line-height: 50vh;
	}
	.answer{
    list-style-type:none;
    display:flex;
    justify-content:space-around;
    font-size:50pt;
    flex-direction:row;
    flex-wrap:wrap-reverse;
    border:1px solid gray;
    border-radius:10px;
	}

  .red{
    color: red;
  }

  .orange{
    color: orange;
  }

  .yellow{
    color: yellow;
  }

  .green{
    color: green;
  }

  .cyan{
    color: cyan;
  }

  .blue{
    color: blue;
  }

  .purple{
    color: purple;
  }

  .playymsg{
    padding: 30rpx;
  }
  .playhead{
    font-size: 12pt;
  }

  .play_p{
    font-size: 10pt;
  }

  .hidden{
    display: none;
  }

  .result{
    height:100vh;
    width:100%;
    display:flex;
    flex-direction:column;
    justify-content:space-around;
    align-items:center;
  }

  .showImg{
    width: 200px;
    height: 200px;
  }

  


